<resources>

    <style name="Widget.App.Button.Primary" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.App.Button.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Secondary</item>
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="ThemeOverlay.App.Button.Secondary" parent="">
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/color_primary</item>
    </style>

    <style name="Widget.App.Button.Rounded" parent="Widget.App.Button.Primary">
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.App.Button.Error.Rounded" parent="Widget.App.Button.Rounded">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Error</item>
    </style>

    <style name="ThemeOverlay.App.Button.Error" parent="">
        <item name="colorPrimary">@color/color_error</item>
    </style>

    <style name="Widget.App.Button.Secondary.Rounded" parent="Widget.App.Button.Secondary">
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.App.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="navigationContentDescription">@string/cd_back</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="QuestionText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionText.Locked">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:drawableLeft">@drawable/ic_error_purple_small</item>
        <item name="drawableSize">12dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="QuestionText.ChoiceButton">
        <item name="android:layout_height">72dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">@drawable/ic_choice</item>
        <item name="android:background">@drawable/choice_button_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="CodeEntryEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="CodeEntryDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#993C3C43</item>
        <item name="android:textSize">22sp</item>
        <item name="android:text">-</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="CodeEntryError">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:drawableLeft">@drawable/ic_error_small</item>
        <item name="drawableSize">12dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="DatePickerDialog" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>

    </style>


    <!-- Duplicate styles to supp -->
    <style name="SpinnerDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- android:datePickerStyle was not added until API 21 -->
        <item name="android:datePickerMode">spinner</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorControlNormal">@color/color_primary</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorControlNormal">@color/color_primary</item>
    </style>

</resources>
