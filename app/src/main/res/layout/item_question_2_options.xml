<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="nl.rijksoverheid.dbco.items.input.QuestionTwoOptionsItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/question_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.question.label}"
            android:paddingBottom="16dp"
            style="@style/QuestionText.Bold"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/question_label">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option1"
                style="@style/QuestionText.ChoiceButton"
                android:onCheckedChanged="@{item::onCheckChanged}"
                android:text="@{item.question.answerOptions.get(0).label }" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option2"
                style="@style/QuestionText.ChoiceButton"
                android:layout_marginTop="8dp"
                android:onCheckedChanged="@{item::onCheckChanged}"
                android:text="@{item.question.answerOptions.get(1).label}" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>