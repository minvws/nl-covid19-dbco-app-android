<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingBottom="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:paddingVertical="16dp"
            android:text="@string/previous"
            android:textColor="@color/color_primary"
            android:textSize="17sp"
            app:accessibilityButton="@{true}"
            app:drawableStartCompat="@drawable/ic_chevron_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/onboarding_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fill_password_top_margin"
            android:text="@string/fill_code_title"
            android:textAppearance="@style/TextAppearance.App.Headline5"
            android:textSize="@dimen/onboarding_title_textsize"
            app:accessibilityHeading="@{true}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button" />

        <LinearLayout
            android:id="@+id/code_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/onboarding_header">

            <com.alimuzaffar.lib.pin.PinEntryEditText
                android:id="@+id/pin_entry_1"
                style="@style/CodeEntryEditText"
                android:cursorVisible="true"
                android:maxLength="4"
                app:pinCharacterSpacing="10dp"
                app:pinLineColors="@android:color/transparent"
                app:pinRepeatedHint="0" />

            <TextView style="@style/CodeEntryDivider" />

            <com.alimuzaffar.lib.pin.PinEntryEditText
                android:id="@+id/pin_entry_2"
                style="@style/CodeEntryEditText"
                android:maxLength="4"
                app:pinCharacterSpacing="10dp"
                app:pinLineColors="@android:color/transparent"
                app:pinRepeatedHint="0" />

            <TextView style="@style/CodeEntryDivider" />

            <com.alimuzaffar.lib.pin.PinEntryEditText
                android:id="@+id/pin_entry_3"
                style="@style/CodeEntryEditText"
                android:maxLength="4"
                app:pinCharacterSpacing="10dp"
                app:pinLineColors="@android:color/transparent"
                app:pinRepeatedHint="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/input_error_view"
            style="@style/CodeEntryError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deze code is ongeldig"
            app:layout_constraintTop_toBottomOf="@id/code_input_container"
            app:layout_constraintStart_toStartOf="@id/code_input_container"
            app:layout_constraintEnd_toEndOf="@id/code_input_container"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/onboarding_button_background"
            android:enabled="false"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>